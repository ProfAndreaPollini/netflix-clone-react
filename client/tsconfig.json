{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["DOM", "ES6", "DOM.Iterable"],
		"jsx": "preserve",
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"alwaysStrict": true,

		"allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
  ]
	},
  "include": [
    "src",
    "types"
]
}
